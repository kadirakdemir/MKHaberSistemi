@model MKHaberSistemi.Web.Areas.Admin.Models.KategoriModels.EditKategoriModel
@{
    ViewBag.Title = "KategoriEkle";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/MKHaber.css" rel="stylesheet" />
<link href="~/plugins/iCheck/square/blue.css" rel="stylesheet" />
<script src="~/Scripts/sweetalert2.all.js"></script>
<script src="~/plugins/iCheck/icheck.min.js"></script>
<script src="~/Scripts/AdminControllerScripts/KategoriScript.js"></script>
<section class="content-header">
    <h1>
        Kategori Ekle
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Admin/Dashboard/Index"><i class="fa fa-home"></i> Anasayfa</a></li>
        <li><a href="/Admin/Kategori/Index"><i class="fa"></i>Haber Kategori</a></li>
        <li class="active">Kategori Ekle</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="kategori">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Kategori Form</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->

                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="box-body">
                        @Html.HiddenFor(x => x.Id)
                        <div class="form-group">
                            <label>Üst Kategori</label>
                            @Html.DropDownListFor(model => model.AltID, new SelectList(Model.Kategoriler, "Id", "Ad"), "--- Kategori Seçiniz ---", htmlAttributes: new { @class = "form-control", id = "AltKategoriID" })
                            @Html.ValidationMessageFor(model => model.AltID, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label>Kategori Adı</label>

                            @Html.EditorFor(model => model.Ad, new { htmlAttributes = new { @class = "form-control", id = "Adi" } })
                            @Html.ValidationMessageFor(model => model.Ad, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label>Açıklama</label>
                            @Html.EditorFor(model => model.Aciklama, new { htmlAttributes = new { @class = "form-control", id = "Aciklama" } })
                            @Html.ValidationMessageFor(model => model.Aciklama, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label>Diğer</label>
                            @Html.EditorFor(model => model.Diger, new { htmlAttributes = new { @class = "form-control", id = "Diger" } })
                            @Html.ValidationMessageFor(model => model.Diger, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputFile">Resim Yükle</label>
                            <input type="file" id="ImageInput" class="">
                            @* @Html.EditorFor(model => model.ProfileImg, AkHaber.Core.Domain.AppConstants.EditorDisplayTemplate_HttpPostedFileBase, new { htmlAttributes = new { @class = "form-control", @id = "ImageInput" } })*@
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-xs-8">
                                    <div class="checkbox icheck">
                                        <label>
                                            @*<input type="checkbox" />Aktif mi?*@
                                            @Html.CheckBoxFor(m => m.IsActive, new { type = "checkbox", id = "Aktif", @class = "checkbox icheck" })
                                            Aktif mi?
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer ">
                        <div class="">
                            <a href="/Admin/Kategori/Index" class="btniptal iptal">  <i class="fa fa-undo solbtn-yazi"></i> İptal</a>
                        </div>
                        <div class="">
                            <button type="submit" class="btnsubmit kaydet" onclick="KategoriEkle()"><i class="fa fa-check solbtn-yazi"></i>Kaydet</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        });
    </script>
</section>

