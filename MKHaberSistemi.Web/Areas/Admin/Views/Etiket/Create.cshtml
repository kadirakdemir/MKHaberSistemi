@model MKHaberSistemi.Web.Areas.Admin.Models.EditEtiketViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/MKHaber.css" rel="stylesheet" />
<link href="~/plugins/iCheck/square/blue.css" rel="stylesheet" />
<link href="~/Content/sweetalert2.min.css" rel="stylesheet" />
<script src="~/Scripts/sweetalert2.all.min.js"></script>
<script src="~/plugins/iCheck/icheck.min.js"></script>
<script src="~/Scripts/AdminControllerScripts/Etiket.js"></script>
<section class="content-header">
    <h1>
        Etiket Ekle
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Admin/Dashboard/Index"><i class="fa fa-home"></i> Anasayfa</a></li>
        <li><a href="/Admin/Etiket/Index"><i class="fa"></i>Haber Etiket</a></li>
        <li class="active">Etiket Ekle</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="kategori">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Etiket Form</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form id="etiketform" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <div class="box-body">
                            @Html.HiddenFor(x => x.Id)

                            <div class="form-group">
                                <label>Etiket Adı</label>

                                @Html.EditorFor(model => model.Ad, new { htmlAttributes = new { @class = "form-control", id = "Adi" } })
                                @Html.ValidationMessageFor(model => model.Ad, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Açıklama</label>
                                @Html.EditorFor(model => model.Aciklama, new { htmlAttributes = new { @class = "form-control", id = "Aciklama" } })
                                @Html.ValidationMessageFor(model => model.Aciklama, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-xs-8">
                                        <div class="checkbox icheck">
                                            <label>
                                                @*<input type="checkbox" />Aktif mi?*@
                                                @Html.CheckBoxFor(m => m.IsActive, new { type = "checkbox", id = "Aktif", @class = "checkbox icheck" })
                                                Aktif mi?
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer ">
                            <div class="">
                                <a href="/Admin/Etiket/Index" class=" btniptal iptal">  <i class="fa fa-undo solbtn-yazi"></i> İptal</a>
                            </div>
                            <div class="">
                                <button type="submit" class="btnsubmit kaydet" onclick="Kaydet()"><i class="fa fa-check solbtn-yazi"></i>Kaydet</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        });
    </script>
</section>


